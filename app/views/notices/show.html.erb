<h1>Show Notices</h1>
<p>
  <strong>Title:</strong>
  <%= @notice.title %>
</p>
<p>
  <strong>text:</strong>
  <%= @notice.text %>
</p>

  <table class="table">
    <thead>
     <tr>
        <th>文章内容</th>
        <th>发表时间</th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.content %></td>
          <td><%= post.created_at %></td>
          <td><%= link_to 'Edit', edit_notice_post_path(post) %></td>
          <td><%= link_to 'Delete', notice_post_path(post),
                  method: :delete,
                  data: { confirm: 'Are you sure' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>


<%= link_to("Write a Post", new_notice_post_path(@notice) ) %>
</p>

<%= link_to 'Edit', edit_notice_path %>
</p>

<%= link_to 'Back', notices_path %>
